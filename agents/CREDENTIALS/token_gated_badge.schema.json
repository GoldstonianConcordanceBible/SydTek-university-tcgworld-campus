{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "SydTek Token-Gated Badge",
  "type": "object",
  "required": ["type", "holder", "wallet", "network", "mint", "gateId", "issuedAt", "roles"],
  "properties": {
    "type": { "const": "SydTekCredential" },
    "holder": { "type": "string", "description": "Human-readable holder label (optional display name)." },
    "wallet": { "type": "string", "description": "Wallet address (public) used for verification." },
    "network": { "enum": ["solana", "base", "ethereum"] },
    "mint": { "type": "string", "description": "Token mint/contract address." },
    "gateId": { "type": "string" },
    "issuedAt": { "type": "string", "format": "date-time" },
    "expiresAt": { "type": "string", "format": "date-time" },
    "roles": {
      "type": "array",
      "items": { "type": "string" }
    },
    "proof": {
      "type": "object",
      "description": "Optional cryptographic proof block (added in later chunks)."
    }
  }
}